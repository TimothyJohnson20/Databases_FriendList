<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_friendDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendDetailActivity">

    <EditText
        android:id="@+id/editText_friendDetail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_friendDetail_Clumsiness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_friendDetail_clumsy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clumsiness"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_friendDetail_Clumsiness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_friendDetail_name" />

    <SeekBar
        android:id="@+id/seekBar_friendDetail_Clumsiness"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/switch_friendDetail_isAwesome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_friendDetail_name" />

    <Switch
        android:id="@+id/switch_friendDetail_isAwesome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is Awesome?"
        app:layout_constraintBottom_toTopOf="@+id/textView_friendDetail_gymFrequency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_friendDetail_Clumsiness" />

    <TextView
        android:id="@+id/textView_friendDetail_gymFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gym Frequency"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_friendDetail_gymFrequency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_friendDetail_isAwesome" />

    <SeekBar
        android:id="@+id/seekBar_friendDetail_gymFrequency"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar_friendDetail_trustRating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_friendDetail_gymFrequency" />

    <TextView
        android:id="@+id/textView_friendDetail_trust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trust "
        app:layout_constraintBottom_toTopOf="@+id/ratingBar_friendDetail_trustRating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_friendDetail_gymFrequency" />

    <RatingBar
        android:id="@+id/ratingBar_friendDetail_trustRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView_friendDetail_moneyOwed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_friendDetail_gymFrequency" />

    <TextView
        android:id="@+id/textView_friendDetail_moneyOwed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money Owed"
        app:layout_constraintBottom_toTopOf="@+id/editText_friendDetail_moneyOwed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar_friendDetail_trustRating" />

    <EditText
        android:id="@+id/editText_friendDetail_moneyOwed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Money Owed: "
        app:layout_constraintBottom_toTopOf="@+id/button_friendDetail_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_friendDetail_moneyOwed" />

    <Button
        android:id="@+id/button_friendDetail_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_friendDetail_moneyOwed" />

</androidx.constraintlayout.widget.ConstraintLayout>